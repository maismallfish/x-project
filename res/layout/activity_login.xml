<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:layout_weight="1"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:layout_weight="8"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/login_head"
            style="@android:style/Widget.ImageButton"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_gravity="top|center_horizontal|center"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/default_blank" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="phone"
            android:text="@string/login_head_phone"
            android:textColor="#7f7f7f" />
        
        <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="50px"
	        android:layout_weight="8"
	        android:orientation="horizontal" >

	        <EditText
	            android:id="@+id/edt_authCode"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_centerInParent="true"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="10dp"
	            android:ems="10"
	            android:inputType="phone"
	            android:text="@string/login_authCoode"
	            android:textColor="#7f7f7f" />

	        <Button
	            android:id="@+id/btn_getCode"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignTop="@+id/edt_authCode"
	            android:layout_toRightOf="@+id/edt_authCode"
	            android:text="获取验证码" />

	        <Button
	            android:id="@+id/btn_reg"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="100dp"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/edt_authCode"
	            android:layout_centerHorizontal="true"
	            android:text="注册" />
	        
        </RelativeLayout>

    </LinearLayout>
    
    

</LinearLayout>